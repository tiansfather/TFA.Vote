<!--[if gt IE 8]><!-->
<html class="no-js">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>华建集团专家评审打分系统</title>
    <meta name="keywords" content="华建集团">
    <meta name="description" content="华建集团">
    <meta name="renderer" content="webkit"><!--360默认急速模式打开-->
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no">
    <meta content="telephone=no, address=no" name="format-detection">
    <meta content="yes" name="apple-mobile-web-app-capable" />
    <meta content="black" name="apple-mobile-web-app-status-bar-style" />
    <link rel="icon" href="/resource/huajian/images/small_logo.ico" type="image/ico" />
    <!-- 引入Vue <script src="js/vue.js"></script>-->
    <!-- 引入样式<link rel="stylesheet" href="css/iview.css"> -->

    <link rel="stylesheet" href="/resource/layui/css/layui.css">
    <link href="~/Resource/huajian/css/layui.css" rel="stylesheet" />
    <!-- 引入组件库<script src="js/iview.min.js"></script> -->
    <!---->
    <link rel="stylesheet" href="/resource/huajian/css/font-awesome.css">
    <!---->
    <link rel="stylesheet" href="/resource/huajian/css/main_huajian.css">
    <link href="/Resource/CSS/style.css" type="text/css" rel="stylesheet" />
</head>
<body style="background:url(/Resource/huajian/images/expertbg.png)">
    <!--[if lt IE 7]>
    <p class="browsehappy">您使用的是<stront>过时</strong>的浏览器。请<a href="http://browsehappy.com/">升级您的浏览器</a>来提高你的经验。</p>
    <![endif]-->
    <div class="layui-form">
        <header>
            <div class="wrap_header">
                <div class="logo"><img src="/resource/huajian/images/logo.png"></div>
                <div class="ind-biaoti"><p style="font-family:SimHei;font-weight:bold">专家评审打分系统<!--预留小字输入<span></span>--></p></div>
                <div class="ind-wel"><i class="huadongjz fa-user user-top"></i><span><b>@user.RealName</b>，您好！</span>　<font color="#ccc">|</font>　<a href="javascript:changepassword()"><i class="huadongjz fa-pencil"></i>修改密码</a>　<font color="#ccc">|</font>　<a href="/Account/Login"><i class="huadongjz fa-angle-double-right"></i>退出</a></div>
                <div class="ind-time">@DateTime.Now.ToString("yyyy年MM月dd日 HH:mm:ss")</div>
            </div>
        </header>

        <!---->

        @RenderBody()

        <!---->

        <footer>
            <p>
                华东建筑集团有限公司 版权所有<br>
                本系统暂不支持IE系列浏览器，推荐使用GOOGLE浏览器及360极速浏览器
            </p>
        </footer>
    </div>

    <div id="panel_password" style="display:none;">
        <div style="padding:20px;">
            <form action="/Account/ChangePassword" method="post" onsubmit="return FormSubmitCallBack(this);">
                <table width="100%" class="formtable" cellpadding="2" cellspacing="2">
                    <tr>
                        <td width="40%" class="tdleft_even"><span class="text">原密码<font style="color:Red">*</font>:</span></td>
                        <td width="60%" class="tdright"><input class="input" type="password" value="" style="width:150px" name="oripassword" id="oripassword"></td>
                    </tr>
                    <tr>
                        <td width="40%" class="tdleft_ord"><span class="text">新密码<font style="color:Red">*</font>:</span></td>
                        <td width="60%"><input class="input" type="password" value="" style="width:150px" name="newpassword" id="newpassword"></td>
                    </tr>
                    <tr>
                        <td width="40%" class="tdleft_even"><span class="text">重复新密码<font style="color:Red">*</font>:</span></td>
                        <td width="60%"><input class="input" type="password" value="" style="width:150px" name="repassword" id="repassword"></td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center" class="tdleft_ord"><input type="submit" class="input button" value="提交" style="width:100px"></td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
    <script src="/Resource/JS/jquery-1.7.1.min.js"></script>
    <script src="/Resource/JS/global.js"></script>
    <script src="/resource/layui/layui.all.js"></script>
    <script>

        function changepassword() {
            //弹出框
            layer.open({
                type: 1,
                title: '修改密码',
                closeBtn: 1,
                area: ['400px', '250px'],
                shadeClose: true,
                content: $("#panel_password").html()
            });
        }
    </script>
    @RenderSection("script", false)
</body>
</html>

